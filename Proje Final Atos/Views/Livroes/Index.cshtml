@model IEnumerable<Proje_Final_Atos.Models.Livro>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de livros</h1>

<p>
   
    <a asp-action="Create"> <button type="button" class="btn btn-light">Adicionar Um Novo Livro</button></a>
</p>

<table class="table table-striped table-dark " id="example" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubTitulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idioma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capa)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Resenha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
